{
  "name": "Generic-DataGrid",
  "version": "1.0.0",
  "description": "A full-stack application with a React front-end and an Express back-end.",
  "main": "server/dist/index.js",
  "scripts": {
    "start": "node server/dist/index.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "npm run build --workspace=server",
    "build:client": "npm run build --workspace=client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "npm run dev --workspace=server",
    "client": "npm start --workspace=client"
  },
  "workspaces": [
    "client",
    "server"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "author": "Nirmal",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}